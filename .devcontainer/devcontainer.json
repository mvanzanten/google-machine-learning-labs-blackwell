{
  "name": "TensorFlow NGC (Blackwell Optimized)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--gpus=all",
    "--shm-size=32gb",
    "--memory=32gb"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "beardedbear.beardedtheme"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "workbench.colorTheme": "Bearded Theme Black & Emerald Soft"
      }
    }
  },
  "containerEnv": {
      "CUDA_CACHE_DISABLE": "0",
      "NVIDIA_TF32_OVERRIDE": "0"
  },
  "postCreateCommand": "nvidia-smi"
}